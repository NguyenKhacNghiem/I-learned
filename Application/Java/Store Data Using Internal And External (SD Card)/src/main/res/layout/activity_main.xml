<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <EditText
        android:id="@+id/etInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nội dung ở đây"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2">

        <Button
            android:id="@+id/btnReadInternal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="đọc internal"
            android:layout_row="0"
            android:layout_column="0"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/btnReadExternal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="đọc external"
            android:layout_row="0"
            android:layout_column="1"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/btnWriteInternal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ghi internal"
            android:layout_row="1"
            android:layout_column="0"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/btnWriteExternal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ghi external"
            android:layout_row="1"
            android:layout_column="1"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"/>
    </GridLayout>

</LinearLayout>