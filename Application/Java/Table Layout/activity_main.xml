<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- android:collapseColumns="1"> Ẩn cột 1 (cột Address). Bắt đầu từ 0 -->
    <!-- android:stretchColumns="*"> Kéo dài tất cả cột cho full bảng nhưng các cột sẽ không bằng nhau-->

    <TableRow
        android:background="@android:color/darker_gray">
        <TextView
            android:text="Name"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_weight="1"/>

        <TextView
            android:text="Address"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_weight="1"/>

        <TextView
            android:text="Phone"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_weight="1"/> <!--Kéo dài các cột cho full bảng và các cột sẽ bằng nhau (kết hợp width 0dp)-->
    </TableRow>

    <TableRow>
        <TextView
            android:text="Peter"
            android:layout_width="0dp"
            android:layout_weight="1"/>

        <TextView
            android:text="Houston"
            android:layout_width="0dp"
            android:layout_weight="1"/>

        <TextView
            android:text="0900000123"
            android:layout_width="0dp"
            android:layout_weight="1"/>
    </TableRow>

