<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray">

        <ImageView
            android:id="@+id/ivRemove"
            android:clickable="true"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/remove"/>

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="50sp"
            android:layout_weight="1"
            android:gravity="end"/>
    </LinearLayout>

    <TableLayout
        android:id="@+id/tlButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">

        <TableRow>
            <Button
                android:id="@+id/btnNumber7"
                android:text="7"
                android:textSize="30sp"
                android:backgroundTint="@android:color/darker_gray"/>

            <Button
                android:id="@+id/btnNumber8"
                android:text="8"
                android:textSize="30sp"
                android:backgroundTint="@android:color/darker_gray"/>

            <Button
                android:id="@+id/btnNumber9"
                android:text="9"
                android:textSize="30sp"
                android:backgroundTint="@android:color/darker_gray"/>

            <Button
                android:id="@+id/btnDivide"
                android:text="/"
                android:textSize="30sp"
                android:backgroundTint="@android:color/holo_orange_dark"/>
        </TableRow>

        <TableRow>
            <Button
                android:id="@+id/btnNumber4"
                android:text="4"
                android:textSize="30sp"
                android:backgroundTint="@android:color/darker_gray"/>

            <Button
                android:id="@+id/btnNumber5"
                android:text="5"
                android:textSize="30sp"
                android:backgroundTint="@android:color/darker_gray"/>

            <Button
                android:id="@+id/btnNumber6"
                android:text="6"
                android:textSize="30sp"
                android:backgroundTint="@android:color/darker_gray"/>

            <Button
                android:id="@+id/btnMulti"
                android:text="x"
                android:textSize="30sp"
                android:backgroundTint="@android:color/holo_orange_dark"/>
        </TableRow>

        <TableRow>
            <Button
                android:id="@+id/btnNumber1"
                android:text="1"
                android:textSize="30sp"
                android:backgroundTint="@android:color/darker_gray"/>

            <Button
                android:id="@+id/btnNumber2"
                android:text="2"
                android:textSize="30sp"
                android:backgroundTint="@android:color/darker_gray"/>

            <Button
                android:id="@+id/btnNumber3"
                android:text="3"
                android:textSize="30sp"
                android:backgroundTint="@android:color/darker_gray"/>

            <Button
                android:id="@+id/btnMinus"
                android:text="-"
                android:textSize="30sp"
                android:backgroundTint="@android:color/holo_orange_dark"/>
        </TableRow>

        <TableRow>
            <Button
                android:id="@+id/btnNumber0"
                android:text="0"
                android:textSize="30sp"
                android:backgroundTint="@android:color/darker_gray"/>

            <Button
                android:id="@+id/btnDot"
                android:text="."
                android:textSize="30sp"
                android:backgroundTint="@android:color/darker_gray"/>

            <Button
                android:id="@+id/btnAdd"
                android:text="+"
                android:textSize="30sp"
                android:backgroundTint="@android:color/holo_orange_dark"/>

            <Button
                android:id="@+id/btnEqual"
                android:text="="
                android:textSize="30sp"
                android:backgroundTint="@android:color/holo_green_dark"/>
        </TableRow>
    </TableLayout>

</LinearLayout>